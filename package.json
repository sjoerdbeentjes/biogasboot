{
  "name": "biogasboot",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "start-update": "nodemon ./bin/www",
    "expose": "ngrok http 3000",
    "build-js": "browserify ./src/js/index.js -o ./public/js/index.js -t [ babelify --presets es2015 ]",
    "build-css": "node-sass --include-path scss src/scss/main.scss ./public/css/main.css",
    "build": "npm run build-js && npm run build-css",
    "watch-js": "watchify ./src/js/index.js -o ./public/js/index.js -t [ babelify --presets es2015 ]",
    "watch-css": "nodemon -e scss -x \"npm run build-css\"",
    "watch": "npm run watch-js && npm run watch-css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sjoerdbeentjes/biogasboot.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sjoerdbeentjes/biogasboot/issues"
  },
  "homepage": "https://github.com/sjoerdbeentjes/biogasboot#readme",
  "xo": {
    "space": true,
    "env": [
      "node",
      "browser"
    ],
    "rules": {
      "capitalized-comments": 0,
      "operator-linebreak": 0,
      "camelcase": 0,
      "no-implicit-coercion": 0,
      "no-unused-vars": 0,
      "new-cap": 0,
      "no-multi-assign": 0,
      "curly": 0,
      "no-else-return": 0,
      "no-unused-expressions": [
        "error",
        {
          "allowTernary": true
        }
      ],
      "unicorn/no-new-buffer": "off",
      "unicorn/filename-case": "off",
      "unicorn/custom-error-definition": "off",
      "unicorn/no-array-instanceof": "off",
      "unicorn/catch-error-name": "off",
      "unicorn/no-process-exit": "off",
      "unicorn/throw-new-error": "off",
      "unicorn/number-literal-case": "off",
      "unicorn/prefer-starts-ends-with": "off",
      "unicorn/prefer-type-error": "off",
      "unicorn/explicit-length-check": "off",
      "unicorn/no-abusive-eslint-disable": "off"
    }
  },
  "dependencies": {
    "body-parser": "~1.17.1",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.3",
    "dotenv": "^4.0.0",
    "ejs": "~2.5.6",
    "express": "~4.15.2",
    "mongoose": "^4.10.3",
    "morgan": "~1.8.1",
    "node-sass-middleware": "0.9.8",
    "xo": "^0.18.2",
    "bcryptjs": "*",
    "connect-flash": "*",
    "express-messages": "*",
    "express-session": "*",
    "express-validator": "*",
    "mongodb": "*",
    "passport": "*",
    "passport-http": "*",
    "passport-local": "*"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.24.1",
    "babelify": "^7.3.0",
    "browserify": "^14.4.0",
    "ngrok": "^2.2.9",
    "node-sass": "^4.5.3",
    "nodemon": "^1.11.0",
    "watchify": "^3.9.0"
  }
}
